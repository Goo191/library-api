{
    "openapi": "3.0.0",
    "info": {
        "title": "University Library API",
        "description": "توثيق الـ API لمكتبة الجامعة",
        "contact": {
            "email": "admin@university.com"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/login": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "تسجيل الدخول للطالب",
                "operationId": "a3b306d14572d1f4bd6c064b3233e7b8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "student_id"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": " يوسف طارق احمد"
                                    },
                                    "student_id": {
                                        "type": "numeric",
                                        "example": 15901
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "تم تسجيل الدخول بنجاح."
                    },
                    "401": {
                        "description": "بيانات الطالب غير صحيحة."
                    }
                }
            }
        },
        "/api/logout": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "تسجيل خروج الطالب",
                "operationId": "fe8f3429cd6979b3b4517e186505f9f9",
                "responses": {
                    "200": {
                        "description": "تم تسجيل الخروج بنجاح."
                    },
                    "401": {
                        "description": "غير مصرح لك."
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/students/{id}": {
            "get": {
                "tags": [
                    "Students"
                ],
                "summary": "عرض بيانات الطالب",
                "description": "إرجاع بيانات الطالب بما في ذلك الصورة المحفوظة.",
                "operationId": "0110b7795c74a759690b8a41ad175dbd",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "معرف الطالب المطلوب عرضه",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "تم جلب بيانات الطالب بنجاح.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "يوسف طارق"
                                        },
                                        "student_id": {
                                            "type": "string",
                                            "example": "123456"
                                        },
                                        "image": {
                                            "type": "string",
                                            "example": "http://127.0.0.1:8000/storage/students/image.jpg"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "tags": [
                    "Students"
                ],
                "summary": "تحديث صورة الطالب",
                "description": "يتم تحديث صورة الطالب عبر إرسال مسار الصورة الجديد.",
                "operationId": "3702febdfd84c8ede39e9a3f2b89a378",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "معرف الطالب المطلوب تحديث صورته",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "image"
                                ],
                                "properties": {
                                    "image": {
                                        "type": "string",
                                        "example": "students/image.jpg"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "تم تحديث الصورة بنجاح!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Image updated successfully!"
                                        },
                                        "student": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Students",
            "description": "إدارة بيانات الطلاب"
        },
        {
            "name": "Authentication",
            "description": "Authentication"
        }
    ]
}